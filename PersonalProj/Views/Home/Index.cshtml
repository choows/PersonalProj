@using PersonalProj.Models
@{
    CustomDbContext customDbContext = new CustomDbContext();
    ViewBag.Title = "Home";
    List<Expenses> expenses = (from e in customDbContext.Expenses
                               select e).ToList();
    List<Place> places = customDbContext.places.ToList();
    if (places == null)
    {
        places = new List<Place>();
    }
}

<div class="container text_chg" ng-app="Main" ng-controller="MainController">
    <div class="col-12">
        <div style="height:20px">

        </div>
        <div>
            <button class="btn btn-primary pull-right" onclick="DisplayExpenses()"><i class="fa fa-plus"></i></button>
        </div>
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>No. </th>
                    <th>DateTime</th>
                    <th>Place/Description</th>
                    <th>Total</th>
                    <th>Leow</th>
                    <th>Choo</th>
                    <th>Leow Paid</th>
                    <th>Choo Paid</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (expenses != null)
                    {
                        foreach (Expenses ex in expenses)
                        {
                            <tr>
                                <td>@ex.ID</td>
                                <td>@ex.ExpensesDateTime</td>
                                <td>@ex.Place.Name</td>
                                <td>@ex.Sum</td>
                                <td>@ex.Leow</td>
                                <td>@ex.Choo</td>
                                <td>@ex.LeowPaid</td>
                                <td>@ex.ChooPaid</td>
                            </tr>
                        }
                    }

                }

            </tbody>
        </table>
    </div>
