<script>
    var app = angular.module("Main", []);
    app.controller('MainController', function ($scope) {
        $scope.Uploads = function () {
            while (totalfiles >= 0) {
                if (allowUpload) {
                    allowUpload = false;
                    $scope.FileUpload.push({
                        name: document.getElementById('FileID').files[totalfiles].name,
                        Status: "Uploading"
                    });
                    $scope.SingleUpload(document.getElementById('FileID').files[totalfiles]);
                    totalfiles = totalfiles - 1;
                }
            }
        }
        $scope.OntextChange = function () {
            if ($scope.leow == 0 && $scope.choo == 0 && $scope.leow_paid == 0 && $scope.choo_paid == 0) {
                $scope.DisableConfirmBtn = true;
            } else {
                $scope.DisableConfirmBtn = false;
            }
            if (($scope.leow_paid + $scope.choo_paid) != ($scope.leow + $scope.choo)) {
                $scope.Error_display = true;
                $scope.DisableConfirmBtn = true;
            } else {
                $scope.Error_display = false;
                $scope.DisableConfirmBtn = false;
            }
            
        }
        $scope.isNewPlace = false;
        $scope.NewPlace = function () {
            $scope.isNewPlace = !$scope.isNewPlace;
        }
        $scope.DisableConfirmBtn = true;
        $scope.leow = 0.00;
        $scope.choo = 0.00;
        $scope.leow_paid = 0.00;
        $scope.choo_paid = 0.00;
        $scope.head_detail = "";
        $scope.AddExp = function () {

            
            var Data = {
                "Datetime": $('#datetime').val(),
                "L": $scope.leow,
                "C": $scope.choo,
                "L_Paid": $scope.leow_paid,
                "C_Paid": $scope.choo_paid,
                "place": $scope.place,
                "head_detail": $scope.head_detail,
                "tail_detail" : $scope.tail_detail
                };
                $.post('@Url.Action("AddNewExpenses", "Upload")', Data, function (data, status) {
                    if (data.status == 200) {
                        location.reload();
                    } else {
                        window.alert("Failed");
                    }
                });
        }

    });

</script>
